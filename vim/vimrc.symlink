filetype plugin indent on
colorscheme molokai 
syntax on

set expandtab
set ts=2
set ai sw=2
set t_Co=256
set number
set nowrap
set pastetoggle=<F4>
set smarttab
set wildmenu
set wildmode=longest,list,full
set ttyfast
set ruler
set scrolloff=3
set ls=2 
let g:buftabs_in_statusline=1

noremap <C-H> :bprev<CR>
noremap <C-L> :bnext<CR>
